---
import Tabbar from "../components/Tabbar.astro";

let { title, colorScheme = "light" } = Astro.props;

if (title) {
  title = `${title} | 4ever Software`;
} else {
  title = "4ever Software";
}
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class={[
      "flex flex-col",
      colorScheme == "dark"
        ? "bg-[#221708] text-stone-300"
        : "bg-stone-100 text-slate-700",
    ].join(" ")}
  >
    <slot />
    <Tabbar />
  </body>
</html>
