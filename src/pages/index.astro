---
import { getEntry } from "astro:content";
import Application from "../layouts/application.astro";

const entry = await getEntry({
  collection: "pages",
  slug: "homepage",
});
const { Content } = await entry.render();
---

<Application title={entry.data.title}>
  <div class="flex flex-col gap-4 max-w-full w-[54rem] mx-auto text-2xl p-4">
    <h1 class="font-bold py-24">Once, Forever</h1>

    <div class="flex flex-col gap-8">
      <Content />
    </div>
  </div>

  <footer
    class="py-24 px-4 text-xs text-slate-500 max-w-full w-[54rem] text-left mx-auto"
  >
    Once, Forever and CardWall are designed, built, and backed by Once, Forever.
    Copyright Â© Once, Forever LLC. All rights reserved.
  </footer>
</Application>
